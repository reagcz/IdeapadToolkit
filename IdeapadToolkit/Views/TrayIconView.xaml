<Page
    x:Class="IdeapadToolkit.Views.TrayIconView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:IdeapadToolkit.Localization"
    xmlns:local="clr-namespace:IdeapadToolkit.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:vm="clr-namespace:IdeapadToolkit.ViewModels"
    Title="TrayIconView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <tb:TaskbarIcon
            x:Name="TrayIcon"
            IconSource="{Binding IconSource}"
            ToolTipText="Ideapad Toolkit"
            TrayMouseDoubleClick="TrayIcon_TrayMouseDoubleClick"
            Visibility="Collapsed">
            <FrameworkElement.ContextMenu>
                <ContextMenu Loaded="ContextMenu_Loaded">
                    <ui:RadioMenuItem
                        Command="{Binding SetChargingModeCommand}"
                        GroupName="ChargingMode"
                        Header="{x:Static loc:Strings.CONSERVATION}"
                        IsChecked="{Binding IsConservationModeEnabled}">
                        <ui:RadioMenuItem.CommandParameter>
                            <system:Int32>1</system:Int32>
                        </ui:RadioMenuItem.CommandParameter>
                    </ui:RadioMenuItem>
                    <ui:RadioMenuItem
                        Command="{Binding SetChargingModeCommand}"
                        GroupName="ChargingMode"
                        Header="{x:Static loc:Strings.NORMAL}"
                        IsChecked="{Binding IsNormalModeEnabled}">
                        <ui:RadioMenuItem.CommandParameter>
                            <system:Int32>0</system:Int32>
                        </ui:RadioMenuItem.CommandParameter>
                    </ui:RadioMenuItem>
                    <ui:RadioMenuItem
                        Command="{Binding SetChargingModeCommand}"
                        GroupName="ChargingMode"
                        Header="{x:Static loc:Strings.RAPID}"
                        IsChecked="{Binding IsRapidModeEnabled}">
                        <ui:RadioMenuItem.CommandParameter>
                            <system:Int32>2</system:Int32>
                        </ui:RadioMenuItem.CommandParameter>
                    </ui:RadioMenuItem>
                    <Separator />
                    <ui:RadioMenuItem
                        Command="{Binding SetPlanCommand}"
                        GroupName="PowerPlan"
                        Header="{x:Static loc:Strings.BATTERY_SAVING}"
                        IsChecked="{Binding Path=IsEfficientChecked}">
                        <ui:RadioMenuItem.CommandParameter>
                            <system:Int32>2</system:Int32>
                        </ui:RadioMenuItem.CommandParameter>
                    </ui:RadioMenuItem>
                    <ui:RadioMenuItem
                        Command="{Binding SetPlanCommand}"
                        GroupName="PowerPlan"
                        Header="{x:Static loc:Strings.INTELLIGENT_COOLING}"
                        IsChecked="{Binding Path=IsIntelligentCoolingChecked}">
                        <ui:RadioMenuItem.CommandParameter>
                            <system:Int32>1</system:Int32>
                        </ui:RadioMenuItem.CommandParameter>
                    </ui:RadioMenuItem>
                    <ui:RadioMenuItem
                        Command="{Binding SetPlanCommand}"
                        GroupName="PowerPlan"
                        Header="{x:Static loc:Strings.EXTREME_PERFORMANCE}"
                        IsChecked="{Binding Path=IsExtremePerformanceChecked}">
                        <ui:RadioMenuItem.CommandParameter>
                            <system:Int32>3</system:Int32>
                        </ui:RadioMenuItem.CommandParameter>
                    </ui:RadioMenuItem>
                    <Separator />
                    <MenuItem
                        Name="MenuItemExit"
                        Click="MenuItemExit_Click"
                        Header="Exit" />
                </ContextMenu>
            </FrameworkElement.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Page>
